---
# Server environment secrets
# Copy this file to server.yml and fill in your values
# DO NOT commit server.yml to git!

# SSH Configuration
ansible_ssh_private_key_file: ~/.ssh/id_rsa
# ansible_become_pass: ""  # Uncomment if sudo requires password

# K3s cluster token (use a persistent token for cluster stability)
# Generate with: openssl rand -hex 32
k3s_cluster_token: "CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32"

# Turing Pi BMC credentials
tpi_bmc_host: "10.10.88.70"
tpi_bmc_username: root
tpi_bmc_password: "your_bmc_password"

# Usage with tpi CLI:
#   TPI_HOSTNAME=10.10.88.70 TPI_USERNAME=root TPI_PASSWORD="..." tpi power status
#
# Usage with Terraform provider:
#   export TURINGPI_ENDPOINT=https://10.10.88.70
#   export TURINGPI_USERNAME=root
#   export TURINGPI_PASSWORD="..."
#   export TURINGPI_INSECURE=true

# Grafana admin password
grafana_admin_password: "your_grafana_password"

# Additional secrets can be added below
